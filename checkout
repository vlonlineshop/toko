<body>
  <header>
    <h1>VL Online Shop - Checkout</h1>
  </header>

  <div class="checkout-container">
    <div class="cart-items">
      <h2>Ringkasan Keranjang</h2>
      <ul id="cart-items-list"></ul>
    </div>

    <div class="cart-summary">
      <p class="total">Total: Rp 0</p>
      <button class="checkout-btn" onclick="proceedToPayment()">Lanjutkan ke Pembayaran</button>
      <a href="index.html" class="back-btn">Kembali ke Belanja</a>
    </div>
  </div>

  <script>
    const products = [
      {
        id: 1,
        name: 'Produk A',
        price: 10000
      },
      {
        id: 2,
        name: 'Produk B',
        price: 20000
      },
      {
        id: 3,
        name: 'Produk C',
        price: 30000
      }
    ];

    let cart = JSON.parse(localStorage.getItem('vl_cart')) || {};

    function renderCartItems() {
      const cartItemsList = document.getElementById('cart-items-list');
      cartItemsList.innerHTML = '';
      let total = 0;

      Object.keys(cart).forEach(id => {
        const product = products.find(p => p.id === parseInt(id));
        if (cart[id].qty > 0) {
          const li = document.createElement('li');
          li.innerHTML = `${product.name} - ${cart[id].qty} x Rp${product.price.toLocaleString()} <span class="price">Rp${(cart[id].qty * product.price).toLocaleString()}</span>`;
          cartItemsList.appendChild(li);
          total += cart[id].qty * product.price;
        }
      });

      document.querySelector('.total').innerText = `Total: Rp ${total.toLocaleString()}`;
    }

    function proceedToPayment() {
      alert('Melanjutkan ke halaman pembayaran...');
    }

    renderCartItems();
  </script>
</body>
